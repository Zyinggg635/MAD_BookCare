<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.bookcare_qy.SharedViewModel" />
    </data>

    <!-- START: THIS IS THE FIX - The ScrollView now correctly wraps the ConstraintLayout -->
    <ScrollView
        android:id="@+id/settings_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        tools:context=".SettingsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- All your CardViews and TextViews go here, unchanged -->

            <!-- User Profile Summary Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUserProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{viewModel.profileImageUri}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_account_circle" />

                    <TextView
                        android:id="@+id/textViewUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@{viewModel.name}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iconChevron1"
                        app:layout_constraintStart_toEndOf="@+id/imageViewProfile"
                        app:layout_constraintTop_toTopOf="@+id/imageViewProfile"
                        tools:text="Alex Green" />

                    <TextView
                        android:id="@+id/textViewUserEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.email}"
                        android:textColor="@android:color/darker_gray"
                        app:layout_constraintEnd_toStartOf="@+id/iconChevron1"
                        app:layout_constraintStart_toStartOf="@+id/textViewUserName"
                        app:layout_constraintTop_toBottomOf="@+id/textViewUserName"
                        tools:text="alex@example.com" />

                    <ImageView
                        android:id="@+id/iconChevron1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@android:color/darker_gray" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- "ACCOUNT" Section Header -->
            <TextView
                android:id="@+id/headerAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="ACCOUNT"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardUserProfile" />

            <!-- "ACCOUNT" Options Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAccountOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="@+id/cardUserProfile"
                app:layout_constraintStart_toStartOf="@+id/cardUserProfile"
                app:layout_constraintTop_toBottomOf="@+id/headerAccount">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rowEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_person"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/rowRewards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_redeem"
                        android:drawableEnd="@drawable/ic_chevron_right"
                        android:drawablePadding="16dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="Rewards &amp; Redeem"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- PREFERENCES Section -->
            <TextView
                android:id="@+id/headerPreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="PREFERENCES"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/headerAccount"
                app:layout_constraintTop_toBottomOf="@+id/cardAccountOptions" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPreferences"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="@+id/cardAccountOptions"
                app:layout_constraintStart_toStartOf="@+id/cardAccountOptions"
                app:layout_constraintTop_toBottomOf="@+id/headerPreferences">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchBlueMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Blue Mode"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_palette" />
            </androidx.cardview.widget.CardView>

            <!-- "OTHER" Section Header -->
            <TextView
                android:id="@+id/headerOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="OTHER"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/headerPreferences"
                app:layout_constraintTop_toBottomOf="@+id/cardPreferences" />

            <!-- Logout Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardOther"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="@+id/cardPreferences"
                app:layout_constraintStart_toStartOf="@+id/cardPreferences"
                app:layout_constraintTop_toBottomOf="@+id/headerOther">

                <TextView
                    android:id="@+id/rowLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="16dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="Logout"
                    android:textColor="#D93025"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_logout"
                    app:drawableTint="#D93025" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <!-- END: The ScrollView now correctly wraps the ConstraintLayout -->
</layout>