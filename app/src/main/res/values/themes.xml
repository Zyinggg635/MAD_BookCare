<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bookcare_qy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Default App Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="buttonStyle">@style/AppButton</item>

        <!-- Default Background -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorSurface">@color/app_background</item>
        
        <!-- Alert Dialog Theme -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.Bookcare_qy" parent="Base.Theme.Bookcare_qy" />

    <!-- Blue Mode Theme -->
    <style name="Theme.Bookcare_qy.Blue" parent="Base.Theme.Bookcare_qy">
        <item name="android:windowBackground">@color/blue_mode_background</item>
        <item name="android:colorBackground">@color/blue_mode_background</item>
        <item name="colorSurface">@color/blue_mode_background</item>
    </style>

    <!-- Custom Button Style -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Alert Dialog Style -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="colorAccent">@color/dialog_button_color</item>
    </style>
</resources>
