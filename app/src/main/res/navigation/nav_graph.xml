<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.bookcare_qy.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bookcare_qy.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@+id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.bookcare_qy.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.bookcare_qy.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bookcare_qy.UserProfileFragment"
        android:label="Home"
        tools:layout="@layout/fragment_user_profile">

        <action
            android:id="@+id/action_navigation_home_to_profileViewFragment"
            app:destination="@id/profileViewFragment" />

        <action
            android:id="@+id/action_navigation_home_to_ecoPointsFragment"
            app:destination="@id/ecoPointsFragment" />

        <action
            android:id="@+id/action_navigation_home_to_viewBookDetailFragment"
            app:destination="@id/viewBookDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.example.bookcare_qy.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_navigation_explore_to_viewBookDetailFragment"
            app:destination="@id/viewBookDetailFragment" />
        <action
            android:id="@+id/action_navigation_explore_to_add_New_Book"
            app:destination="@id/add_New_Book" />
        <action
            android:id="@+id/action_navigation_explore_to_my_Listings"
            app:destination="@id/my_Listings" />
    </fragment>

    <fragment
        android:id="@+id/navigation_community"
        android:name="com.example.bookcare_qy.CommunityFragment"
        android:label="Community"
        tools:layout="@layout/fragment_community" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.bookcare_qy.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_navigation_settings_to_profileViewFragment"
            app:destination="@id/profileViewFragment" />
        <action
            android:id="@+id/action_navigation_settings_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
        <action
            android:id="@+id/action_navigation_settings_to_myBadgesFragment"
            app:destination="@id/myBadgesFragment" />
    </fragment>

    <fragment
        android:id="@+id/myBadgesFragment"
        android:name="com.example.bookcare_qy.MyBadgesFragment"
        android:label="My Badges"
        tools:layout="@layout/fragment_my_badges" />

    <fragment
        android:id="@+id/ecoPointsFragment"
        android:name="com.example.bookcare_qy.EcoPointsFragment"
        android:label="Eco-Points"
        tools:layout="@layout/fragment_eco_points" >
        <action
            android:id="@+id/action_ecoPointsFragment_to_ecoPointsHistoryFragment"
            app:destination="@id/ecoPointsHistoryFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/ecoPointsHistoryFragment"
        android:name="com.example.bookcare_qy.EcoPointsHistoryFragment"
        android:label="Eco-Points History"
        tools:layout="@layout/fragment_eco_points_history" />

    <fragment
        android:id="@+id/profileViewFragment"
        android:name="com.example.bookcare_qy.ProfileViewFragment"
        android:label="View Profile"
        tools:layout="@layout/fragment_profile_view" />

    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.bookcare_qy.ProfileEditFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_profile_edit" />

    <fragment
        android:id="@+id/add_New_Book"
        android:name="com.example.bookcare_qy.Add_New_Book"
        android:label="fragment_add__new__book"
        tools:layout="@layout/fragment_add__new__book" >
        <action
            android:id="@+id/action_add_New_Book_to_bookAddedFragment"
            app:destination="@id/bookAddedFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookAddedFragment"
        android:name="com.example.bookcare_qy.BookAddedFragment"
        android:label="fragment_book_added"
        tools:layout="@layout/fragment_book_added" >
        <action
            android:id="@+id/action_bookAddedFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_bookAddedFragment_to_navigation_explore"
            app:destination="@id/navigation_explore"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewBookDetailFragment"
        android:name="com.example.bookcare_qy.ViewBookDetailFragment"
        android:label="ViewBookDetailFragment"
        tools:layout="@layout/fragment_view_book_detail">
        <argument
            android:name="book"
            app:argType="com.example.bookcare_qy.Book" />
    </fragment>
    <fragment
        android:id="@+id/my_Listings"
        android:name="com.example.bookcare_qy.My_Listings"
        android:label="My_Listings"
        tools:layout="@layout/fragment_my__listings">
        <action
            android:id="@+id/action_my_Listings_to_add_New_Book"
            app:destination="@id/add_New_Book" />
        <action
            android:id="@+id/action_my_Listings_to_viewBookDetailFragment"
            app:destination="@id/viewBookDetailFragment" />
    </fragment>

</navigation>